{
    "name": "blomstra/flarum-api-client",
    "description": "A Flarum Api client",
    "type": "library",
    "homepage": "https://github.com/blomstra/flarum-api-client",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Blomstra\\Flarum\\Api\\": "src/",
            "Blomstra\\Flarum\\Api\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "DaniÃ«l Klabbers",
            "email": "daniel@klabbers.email",
            "homepage": "https://luceos.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "sammyjo20/saloon": "^2.1.0",
        "spatie/data-transfer-object": "^3.8",
        "illuminate/support": "9.* | 10.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "pestphp/pest": "^1.21",
        "spatie/ray": "^1.33",
        "symfony/dotenv": "^6.2"
    },
    "scripts": {
        "test": [
            "./vendor/bin/pest"
        ],
        "fix-code": [
            "./vendor/bin/php-cs-fixer fix"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
