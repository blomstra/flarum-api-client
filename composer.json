{
    "name": "blomstra/flarum-api-client",
    "description": "This is my package flarum-api-client",
    "type": "library",
    "homepage": "https://github.com/blomstra/flarum-api-client",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Blomstra\\FlarumApiClient\\": "src/",
            "Blomstra\\FlarumApiClient\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "DaniÃ«l Klabbers",
            "email": "daniel@klabbers.email"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "sammyjo20/saloon": "^1.2",
        "spatie/data-transfer-object": "^3.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "pestphp/pest": "^1.21",
        "spatie/ray": "^1.33",
        "symfony/dotenv": "^6.2"
    },
    "scripts": {
        "test": [
            "./vendor/bin/pest"
        ],
        "fix-code": [
            "./vendor/bin/php-cs-fixer fix"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
